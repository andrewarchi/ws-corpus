VERSION 0.8

build:
    FROM rust:1.76
    WORKDIR /spacey
    COPY spacey .
    # Cargo.lock is ignored by the repo, but if it is generated by the host Rust in
    # the Corpus, then it can cause problems.
    RUN rm -f Cargo.lock && \
        cargo test && \
        RUSTFLAGS='-C target-feature=+crt-static' cargo build --release --target x86_64-unknown-linux-gnu
    SAVE ARTIFACT target/x86_64-unknown-linux-gnu/release/spacey /bin/
    SAVE ARTIFACT resources/ws/*.ws /programs/

docker:
    FROM scratch
    COPY +build/ /
    ENTRYPOINT ["/bin/spacey"]
    SAVE IMAGE wspace-corpus/rust/cedricschwyter-spacey
